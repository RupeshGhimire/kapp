<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kimbutech.kapp.calendar"
    tools:showIn="@layout/activity_calendar"
    >
    <fragment
        android:name="com.kimbutech.kapp.calendarView"
        tools:layout="@layout/fragment_calendar_view"
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"




        />


    <fragment

        android:name="com.kimbutech.kapp.EventsFragment"
        tools:layout="@layout/fragment_events"
        android:id="@+id/buttomView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>




</LinearLayout>
