<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bitcakecodes.kapp.BlocksActivity"
    >








            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                android:layout_margin="6dp">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/primary"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"



                >

                <ImageView
                    android:id="@+id/imageinfo"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="16dp"
                    android:src="@drawable/kulogo"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/ku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/accent"
                    android:layout_toRightOf="@id/imageinfo"
                    android:paddingTop="6dp"
                    android:paddingLeft="16dp"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="Kathmandu University"
                    />
                <TextView
                    android:id="@+id/po"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:paddingLeft="16dp"
                    android:layout_below="@id/ku"
                    android:layout_toRightOf="@id/imageinfo"
                    android:text="@string/po"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:paddingLeft="16dp"
                    android:layout_below="@id/po"
                    android:layout_toRightOf="@id/imageinfo"
                    android:text="@string/location"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:paddingTop="6dp"
                    android:paddingLeft="16dp"
                    android:layout_below="@id/location"
                    android:layout_toRightOf="@id/imageinfo"

                    android:text="ESTD: "
                    android:textStyle="bold"
                    android:textColor="@color/accent"/>
                <TextView
                    android:id="@+id/estd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/date"
                    android:layout_below="@id/location"

                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"

                    android:text="@string/estd"
                    android:textColor="@color/white"/>



            </RelativeLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />


            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                />







            <View
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_height="1dp"
               />




</LinearLayout>