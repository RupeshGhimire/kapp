<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="6dp"

    >


    <!-- below is the main scrolable part of the UI-->
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@color/primary">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">






    <!-- this is the main logo and name -->
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:id="@+id/imageinfo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:src="@drawable/kulogo"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/ku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accent"
            android:layout_toRightOf="@id/imageinfo"
            android:paddingTop="6dp"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:singleLine="true"
            android:typeface="sans"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Kathmandu University"
            />
        <TextView
            android:id="@+id/po"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingLeft="16dp"
            android:layout_below="@id/ku"
            android:layout_toRightOf="@id/imageinfo"
            android:text="@string/po"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingLeft="16dp"
            android:layout_below="@id/po"
            android:layout_toRightOf="@id/imageinfo"
            android:text="@string/location"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:paddingTop="6dp"
            android:paddingLeft="16dp"
            android:layout_below="@id/location"
            android:layout_toRightOf="@id/imageinfo"

            android:text="ESTD: "
            android:textStyle="bold"
            android:textColor="@color/accent"/>
        <TextView
            android:id="@+id/estd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/date"
            android:layout_below="@id/location"

            android:paddingTop="6dp"
            android:paddingBottom="6dp"

            android:text="@string/estd"
            android:textColor="@color/white"/>



    </RelativeLayout>







    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:paddingBottom="6dp"
        android:paddingLeft="16dp"
        android:textColor="@android:color/primary_text_light"
        android:text="Vision Statement :  "
        android:textAllCaps="true"
        android:gravity="start|center"
        android:textSize="14sp"
        android:background="@color/primary_light"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/vision"
        android:paddingBottom="11dp"
        android:paddingLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textColor="@android:color/secondary_text_light"
        android:text="@string/vision"
        android:textStyle="italic"
        android:gravity="start|center"
        android:background="@color/primary_light"
        />



    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"

        />
</LinearLayout>

</android.support.v7.widget.CardView>

</LinearLayout>



